<%= form_for(:food, url:{:action=>'update', :id=>@food.id}) do |f|%>
<div class="field">
    <%= f.label :Name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_area :price %>
  </div>
  <div class="field">
    <%= f.label :Description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :section %><br>
    <%= f.text_area :section%>
  </div>
  <div class="form-group">
    <%= f.label :photo %><br>
    <%= f.file_field :image %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>